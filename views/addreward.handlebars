<link href="css/bootstrap.css" rel="stylesheet">
<link href="css/bootstrap-theme.css" rel="stylesheet">
<link href="css/mainStyle.css" rel="stylesheet">
<link href="css/task_detail_Style.css" rel="stylesheet">
</head>
<body>
<div id="page" class="container">
	<div id="wrapper">
		<div id="topBar">
			<div class="header">Add Reward		</div>
		</div>
		<div id="task-content">
			<div id="add-task" style="text-align:center">
				<div id="controlform1">
					<form id="projectForm" role="form">
						<div class="form-group">
							<label for="project">
							<h4>Reward name:
								<input type="text" class="form-control" id="newTaskName" placeholder="Make bed">
						</h4>
						</div>
	
						<div class="form-group">
							<label for="description">
							<h4>Reward Points needed:							</h4>
							<p><input type="text" class="form-control" id="rewardVal" placeholder="2">pts</p>
						</div>
						<button id="submitRewardBtn" type="button" class="btn btn-default">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<div id="bottomBar"> <a href="/"><img id="tasksIcon" class="nav-icons" src="images/tasksIcon.png" /></a> <a href="/rewards" ><img id="rewardsIcon" class="nav-icons" src="images/rewardsIcon.png" /></a> <a href="/notifications"><img id="notIcon" class="nav-icons" src="images/notIcon.png" /></a> <a href="/settings"><img id="settingsIcon" class="nav-icons" src="images/settingsIcon.png" /></a> <span class="stretch"></span> </div>
</div>
<script src="js/jquery-1.11.0.js"></script> 
<script src="js/bootstrap.js"></script> 
<script src="js/add_task_page.js"></script>
<script type="text/javascript">
$('#submitRewardBtn').click(function(){
		var obj = {
			"text": $("#newTaskName").val(),
			"cost": $("#rewardVal").val()
		};
		$.post("/callback?action=addReward", obj)
			.done(function(){alert("Reward added!");window.location.href="/rewards"})
			.fail(function(){alert("Reward not added!");});
	});
</script>
</body>
</html>
<link href="css/bootstrap.css" rel="stylesheet">
<link href="css/bootstrap-theme.css" rel="stylesheet">
<link href="css/mainStyle.css" rel="stylesheet">
<link href="css/task_detail_Style.css" rel="stylesheet">
</head>
<body>
<div id="page" class="container">
	<div id="wrapper">
		<div id="topBar">
			<div class="header">Add Reward</div>
			<a href="/">
			<div class="leftBtn"><img src="images/back_btn.png" class="addBtn" /></div>
			</a>
		</div>
		<div id="task-content">
			<div id="add-task" style="text-align:center">
				<div id="controlform1">
					<form id="projectForm" role="form">
						<div class="form-group">
							<label for="project">
							<h4>Reward name:</h4>
								<input type="text" class="form-control" id="newRewardName" placeholder="i.e. Disneyland!">
						</div>
	
						<div class="form-group">
							<label for="description">
							<h4>Reward Points needed:							</h4>
							<p><input type="text" class="form-control" id="rewardVal" placeholder="i.e. 1000">pts</p>
						</div>
						<a href="/rewards"><button type="button" class="btn btn-default">Cancel</button></a>
						<button id="submitRewardBtn" type="button" class="btn btn-default">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
<script src="js/jquery-1.11.0.js"></script> 
<script src="js/bootstrap.js"></script> 
<script src="js/add_task_page.js"></script>
<script type="text/javascript">
$('#submitRewardBtn').click(function(){
		var obj = {
			"text": $("#newRewardName").val(),
			"cost": $("#rewardVal").val()
		};
		$.post("/callback?action=addReward", obj)
			.done(function(){alert("Reward added!");window.location.href="/rewards"})
			.fail(function(){alert("Reward not added!");});
	});
</script>
</body>
</html>
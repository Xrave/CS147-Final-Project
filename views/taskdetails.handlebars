    <body>
        <div id="page" class="container">

            <div id="topBar">
                <div class="header">Task</div>
                <div class="completedRightBtn"><!--img src="images/editTask_btn.png" id="editBtn"/--><button id="editBtn" class="btn btn-primary">&#9998;Edit</button></div>

                <a href="/"><div class="leftBtn"><img src="images/back_btn.png" class="backBtn" /></div></a>
            </div>

            <div id="taskTitle">
                <p id='blockText'>{{task_description}}</p>
                <p><input name="NewTaskValue" type="text" value="{{task_description}}" id="newTaskname" class="boob form-control" style="text-align:center"/></p>
            </div>

            <div class="horizDivider"></div>

            <div id="detailsBlock">
                <p id="blockName">{{assignedTo}}</p>
                <p id="blockNumber">{{taskReward}}</p>

                <!--HIDDEN EDIT ELEMENTS-->
                <select name="NewChildSelector" id="childSelector" class="boob ">
                </select>
                <input name="NewRewardValue" id="newRewardValue" class="boob" value="{{taskReward}}" /> <!--The value presented should be the same as the original (before editing)-->
                <!--END HIDDEN EDIT ELEMENTS-->
            </div>

            <div class="horizDivider"></div>
            
              <div id="comments">
                <p style="color:#D55; margin:0px">COMMENTS</p>
                <div id='commentsSection'>
{{#each comments}}
<p class='post'>{{text}}</p>
{{/each}}
                </div>
                <div id="commentbox">
                    <textarea rows="2" class=v"glyphicon-align-center" id="commentarea" placeholder="Leave a comment if you want to clarify something."></textarea>
                    <p>
                        <div id= "reply_btn">
                            <img src= "images/reply_btn.png" />
                        </div>
                    </p>
                </div>
            </div>
        </div>    

        <style type="text/css">
            #addNewChildPopup, #addNewParentPopup {
                width: 300px;
                height: 360px;
                background-color: #EBEBEB;
                box-shadow: 0px 0px 5px #888888;
                position: absolute;
                top: 50%;
                left: 50%;
                border-radius:10px;
                margin-top: -180px;
                margin-left: -150px;
                text-align: center;
                font-size: 17px;
                display: none;
            }
        </style>

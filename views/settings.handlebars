    <body>
        <div id="page" class="container">
            <div id="wrapper">
                <div id="topBar">
                    <div class="header">
                        Settings
                    </div>
                </div>
                <div id="task-content">
                    <div id="add-task" style="text-align:left; padding:30px">
                        <div id="controlform1">
                            <form id="projectForm" role="form">
                                <div class="form-group">
                                    <h4>
                                        Children registered to your account:
                                    </h4>
                                    <div class = "project thumbnail">
                                        <span id="childList">

                                        </span>
                                        <button id="addNewChild" type="button" class="btn btn-default btn-group-justified">
                                            Add New Child
                                        </button>
                                    </div>


                                </div>

                                <div class ="form-group">
                                    <h4>
                                        Administrators/Parents of your group: 
                                    </h4>
                                    <div class = "project thumbnail">
                                        <span id="parentList">
                                        </span>
                                        <button id="addNewParent" type="button" class="btn btn-default btn-group-justified">
                                            Add New Parent/Administrator
                                        </button>
                                    </div>
                                </div>
                                <div class="form-group">
                                </label>
                            </div>
                            <button id="logoutBtn" type="button" class="btn btn-default btn-group-justified btn-primary">
                                Logout
                            </button>
                            <br />
                            <br />
                        </form>
                    </div>
                </div>
            </div>

            <div id="addNewChildPopup">
                <br />
                <span style="font-weight:bold">
                    Add a Child
                </span>
                <br />
                <br />
                <input type="text" id="nameField" value="Name" />
                <br />
                <br />
                <input type="text" id="emailField" value="Email" />
                <br />
                <br />
                <input type="text" id="passwordField" value="Temp. Password" />
                <br />
                <br />
                <button id="addChildSubmit">
                    Add
                </button>
                <button id="addChildCancel">
                    Cancel
                </button>
            </div>
            <div id="addNewParentPopup">
                <br />
                <span style="font-weight:bold">
                    Add a Parent
                </span>
                <br />
                <br />
                <input type="text" id="nameField" value="Name" />
                <br />
                <br />
                <input type="text" id="emailField" value="Email" />
                <br />
                <br />
                <input type="text" id="passwordField" value="Temp. Password" />
                <br />
                <br />
                <button id="addParentSubmit">
                    Add
                </button>
                <button id="addParentCancel">
                    Cancel
                </button>
            </div>
            <div id="logoutPopup">
                <span style="font-weight:bold">
                    You are logged out.
                </span>
            </div>
        </div>
    </div>
    <div id="bottomBar">

        <a href="/">
            <img id="tasksIcon" class="nav-icons" src="images/tasksIcon.png" />
        </a>

        <a href="/rewards" >
            <img id="rewardsIcon" class="nav-icons" src="images/rewardsIcon.png" />
        </a>

        <a href="/notifications">
            <img id="notIcon" class="nav-icons" src="images/notIcon.png" />
        </a>

        <a href="/settings">
            <img id="settingsIcon" class="nav-icons" src="images/settingsIcon.png" />
        </a>

        <span class="stretch">
        </span>
        <div id="active-highlight" style="left: 249px;">
        </div>

    </div>
</div>

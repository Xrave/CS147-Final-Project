            <div id="addNewChildPopup">
                <br />
                <span style="font-weight:bold">
                    Add a Child
                </span>
                <br />
                <br />
                <input class="form-control" type="text" required id="nameField" placeholder="Name"  />
                <br />
                <input class="form-control" type="text" required id="emailField" placeholder="Email"  />
                <br />
                <input class="form-control" type="text" required id="passwordField" placeholder="Temp. Password"  />
                <br />
                <button id="addChildSubmit" class="btn btn-default">
                    Add
                </button>
                <button id="addChildCancel" class="btn btn-default">
                    Cancel
                </button>
            </div>
            <div id="addNewParentPopup">
                <br />
                <span style="font-weight:bold">
                    Add a Parent
                </span>
                <br />
                <br />
                <input type="text" id="nameField" value="Name" />
                <br />
                <br />
                <input type="text" id="emailField" value="Email" />
                <br />
                <br />
                <input type="text" id="passwordField" value="Temp. Password" />
                <br />
                <br />
                <button id="addParentSubmit">
                    Add
                </button>
                <button id="addParentCancel">
                    Cancel
                </button>
            </div>

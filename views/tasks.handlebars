    <body>
		<div id="page" class="container">
		<div id="wrapper">
    	<div id="topBar">
			<div class="header">Tasks</div>
			<a href="/addtask" ><div class="rightBtn">
			<!--<img src="images/editTask_btn.png" id="editBtn"/>-->
			<img src="images/AddTask_btn.png" id="addTaskBtn" />
			</div></a>
    	</div>

    	<div id="task-content">
		<!--For parent:-->
		    {{#each taskArray}}
    		<div class="task-item" id="{{_id}}">
    			<span class="image">
				<img src="http://temporarygiraffe.herokuapp.com/images/Placeholder_profile_black.png"></span>
				<span class="description"><div id="magicalDivDontDelete">{{assignedTo}} | <span id="color">{{reward-point}}</span></div>
    			<p id="task-desc">{{task_description}}</p>
				</span>
    		</div>
			{{/each}}
			{{{message}}}

			<div class="space-control-useless"></div>
		<!--For parent? -->
			   
			   
			
    		</div>
    	</div>
		</div>
    	<div id="bottomBar"> 
    		<a href="/"><img id="tasksIcon" class="nav-icons" src="images/tasksIcon.png" /></a>
    		<a href="/rewards" ><img id="rewardsIcon" class="nav-icons" src="images/rewardsIcon.png" /></a>
    		<a href="/notifications"><img id="notIcon" class="nav-icons" src="images/notIcon.png" /></a>
    		<a href="/settings"><img id="settingsIcon" class="nav-icons" src="images/settingsIcon.png" /></a>
			<span class="stretch"></span>
			<div id="active-highlight" style="left: 7px;"></div>
    	</div>
		</div>
		<script src="js/jquery-1.11.0.js"></script>
		<script src="js/bootstrap.js"></script>	
		<script src="js/notify.min.js"></script>

